<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/btn_video"
        android:layout_width="207dp"
        android:layout_height="74dp"
        android:layout_below="@+id/btn_motivate"
        android:layout_alignBottom="@+id/btm_ig"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-387dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="97dp"
        android:background="#7FFFD4"
        android:text="VIDEO"
        android:textColor="#000"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btm_ig"
        android:layout_width="207dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="77dp"
        android:background="#D81B2B"
        android:text="ANIMAL"
        android:textColor="#FFF"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btn_motivate"
        android:layout_width="207dp"
        android:layout_height="74dp"
        android:layout_below="@+id/btn_membaca"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="77dp"
        android:background="#D81B60"
        android:text="MOTIVATE"
        android:textColor="#FFF"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btn_membaca"
        android:layout_width="207dp"
        android:layout_height="74dp"
        android:layout_below="@+id/btm_ig"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="77dp"
        android:background="#1BACD8"
        android:text="ENGLISH READING"
        android:textColor="#FFF"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="207dp"
        android:layout_height="74dp"
        android:layout_below="@+id/btn_motivate"
        android:layout_marginStart="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="75dp"
        android:background="#7FFFD4"
        android:text="MY PROFILE"
        android:textColor="#000"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_membaca"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="-32dp"
        android:text="LOGOUT" />


</RelativeLayout>